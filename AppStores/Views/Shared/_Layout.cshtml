<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppStores.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Applications" asp-action="Index">Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 text-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Applications" asp-action="Index">Приложения</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Games" asp-action="Index">Игры</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">Книги</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                    <div class="d-flex">
                        <button class="btn btn-outline-dark me-2" id="searchToggleBtn" aria-expanded="false">
                            Поиск
                        </button>
                        <form id="searchForm" class="d-none" asp-controller="Games" asp-action="Index" method="get">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Поиск..." name="searchString" id="searchInput">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Store - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $('#searchToggleBtn').click(function () {
                $('#searchForm').toggleClass('d-none');
                $('#searchInput').focus();
            });

            $('.nav-link').click(function () {
                $('.nav-link').removeClass('active-applications active-games active-books');
                switch (this.id) {
                    case 'applicationsLink':
                        $(this).addClass('active-applications');
                        break;
                    case 'gamesLink':
                        $(this).addClass('active-games');
                        break;
                    case 'booksLink':
                        $(this).addClass('active-books');
                        break;
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
